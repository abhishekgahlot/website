	style.
		body {
			background: #fafafa;
			font-family: 'Work Sans', 'Helvetica Neue', Helvetica, Arial !important;
			font-size: 16px;
		}
		
		::moz-selection {
			background-color: #f1f1f1;
			color: #434343;
		}

		::selection {
			background-color: #f1f1f1;
			color: #434343;
		}

		h1 {
			font-weight: 900;
			font-size: 48px;
			color: #434343;
			margin: 0;
			padding-top: 10px;
		}

		a {
			color: #38a9ff;
		}

		a:hover {
			color: #38a9ff;
			text-decoration: underline;
		}

		.lb-header {
			margin-top: 25px;
		}

		.lb-logo {
			border-top: 2px solid #dadada;
		}

		.lb-logo img {
			padding: 15px 15px 0;
			max-width: 100%;
			display: block;
			margin-left: auto;
			margin-right: auto;
		}

		.lb-title {
			letter-spacing: -.015em;
			border-top: 2px solid #dadada;
			padding-left: 10px;
			text-transform: none;
		}

		.lb-title small {
			font-size: 14px;
			text-transform: uppercase;
			letter-spacing: .04em;
			color: #999;
			display: block;
			margin-top: 10px;
		}

		@media screen and (max-width: 990px) {
			.lb-title {
				font-size: 36px;
			}
		}

		@media screen and (max-width: 768px) {
			.lb-title,
			.lb-meta {
				margin-top: 15px;
			}
		}

		@media screen and (max-width: 550px) {
			.lb-title {
				font-size: 28px;
			}
		}

		.lb-meta {
			border-top: 2px solid #dadada;
			padding-top: 15px;
			padding-left: 10px;
			color: #434343;
		}

		.lb-meta-data {
			display: block;
			margin-bottom: 4px;
			color: #666;
		}

		.lb-meta-data strong {
			color: #434343;
			font-weight: bold;
		}

		.lb-section {
			margin: 150px 0 75px;
		}

		.lb-subsection {
			margin-top: 75px;
			-webkit-transition: all .25s ease-in;
				 -moz-transition: all .25s ease-in;
					-ms-transition: all .25s ease-in;
					 -o-transition: all .25s ease-in;
							transition: all .25s ease-in;      
		}

		.lb-subsection:first-child {
			margin-top: 0;
		}

		.lb-subsection:hover .lb-category,
		.lb-subsection:hover .lb-page-list {
			border-color: #ccc;
		}

		.lb-subsection:hover .lb-page-list {
			background-color: #f5f5f5;
		}

		.lb-category {
			border-top: 2px solid #dadada;
			padding: 15px 10px;
			-webkit-transition: all .25s ease-in;
				 -moz-transition: all .25s ease-in;
					-ms-transition: all .25s ease-in;
					 -o-transition: all .25s ease-in;
							transition: all .25s ease-in; 
		}

		.lb-category__title {
			font-weight: 700;
			font-size: 24px;
			color: #434343;
			margin-bottom: 5px;
			margin-top: 0;
			letter-spacing: -.01em;
		}

		.lb-category__description {
			font-size: 16px;
			font-family: Georgia, serif;
			font-style: italic;
			line-height: 1;
			letter-spacing: -.01em;
			color: #999;
		}

		.lb-page-list {
			border-top: 2px solid #dadada;
			padding-left: 0;
			-webkit-transition: all .25s ease-in;
				 -moz-transition: all .25s ease-in;
					-ms-transition: all .25s ease-in;
					 -o-transition: all .25s ease-in;
							transition: all .25s ease-in; 
		}

		.lb-page-list__item {
			display: block;
			list-style-type: none;
			border-bottom: 1px solid #ddd;
			margin-bottom: 0;
		}

		.lb-page-list__item--strong-separator {
			border-color: #ccc;
			border-width: 2px;
		}

		.lb-page-list__item:last-child {
			border-bottom: none;
		}

		.lb-page-list__link {
			font-size: 16px;
			font-weight: bold;
			color: #f96315;
			display: block;
			padding: 12px 10px 14px;
		}

		.lb-page-list__link:hover {
			color: #f96315;
			background: #fff;
			text-decoration: none;
		}

		.lb-author {
			font-weight: 700;
			color: #999;
			position: fixed;
			bottom: 20px;
			right: 30px;
		}

		.lb-author:hover,
		.lb-author:active,
		.lb-author:focus {
			text-decoration: none;
			color: #666;
		}

		.lb-author:hover .lb-author__name {
			opacity: 1;
			transform: translateX(0);
		}

		.lb-author:hover .lb-author__logo {
			opacity: 1;
			transform: translateX(0);
			-webkit-filter: grayscale(0%);
				 -moz-filter: grayscale(0%);
					-ms-filter: grayscale(0%);
					 -o-filter: grayscale(0%);
		}

		.lb-author__logo {
			opacity: .5;
			transform: translateX(150px);
			transition: .2s all ease-in-out;
			filter: none;
			-webkit-filter: grayscale(100%);
				 -moz-filter: grayscale(100%);
					-ms-filter: grayscale(100%);
					 -o-filter: grayscale(100%);
			position: relative;
			z-index: 2;
		}

		.lb-author__name {
			opacity: 0;
			transform: translateX(-20px);
			transition: .4s all ease-in-out;
			display: inline-block;
			position: relative;
			top: -10px;
			margin-left: 5px;
		}

