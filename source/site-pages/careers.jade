extends pagewrapper

//- Override config.jade file
append page-config
	- var PageTitle = 'Work at Dgraph, you will love it here.'
	- var PageClass = 'career'
	- var PageIntroClass = 'career'
	- var PageContentClass = 'career'

//- Begin
block partials
	//- include partials/modals/modal
	//- include partials/overlays/overlay

block page-intro
	.container
		.row
			.col-md-10.col-md-push-1
				header.page-intro__header
					h1.page-intro__title Come and join our team
					p.page-intro__lead Passionate about building world's best graph database, working with a small team of dedicated backend engineers that have seldom touched frontend code?<br/><b>You will love it here.</b>

block page-content
	.career-perk__wrapper
		.container
			.row
				.col-12
					ul.career-perk__list
						li.career-perk__item
							svg.icon.career-perk__icon
								use(xlink:href="#icon-perk-01" xmlns:xlink="http://www.w3.org/1999/xlink")
							h5.career-perk__title Open and Transparent
							p.career-perk__description Everyone deserves to know what's going on.
						
						li.career-perk__item
							svg.icon.career-perk__icon
								use(xlink:href="#icon-perk-02" xmlns:xlink="http://www.w3.org/1999/xlink")
							h5.career-perk__title Get a Thinkpad
							p.career-perk__description 
								| Or, a Macbook if you really want.
						
						li.career-perk__item
							svg.icon.career-perk__icon
								use(xlink:href="#icon-perk-03" xmlns:xlink="http://www.w3.org/1999/xlink")
							h5.career-perk__title Custom workstation
							p.career-perk__description $2500 towards a workstation and desk of your choice.
						
						li.career-perk__item
							svg.icon.career-perk__icon
								use(xlink:href="#icon-perk-04" xmlns:xlink="http://www.w3.org/1999/xlink")
							h5.career-perk__title Kindle for every team member
							p.career-perk__description Unlimited Kindle books, no questions asked.

						li.career-perk__item
							svg.icon.career-perk__icon
								use(xlink:href="#icon-perk-08" xmlns:xlink="http://www.w3.org/1999/xlink")
							h5.career-perk__title Flexible time off
							p.career-perk__description Completely self-manage when you need to take time off.

	.job-offer__wrapper
		a.job-offer__cta.button--outline(href="https://boards.greenhouse.io/dgraph" target="_blank")
			| View all openings

	.cta-wrapper.cta-wrapper--career
		.container
			.row
				.col-12
					.cta
						.cta__box
							h4.cta__title Download Dgraph
							p Install Dgraph binaries quickly in a single step using this command if you are on Linux/Mac: <code> curl https://get.dgraph.io | bash</code> For other methods of installing Dgraph check out our documentation.
							
							a(href="https://docs.dgraph.io" target="_blank").button.button--white.button--jumbo.cta__button Official Documentation

						.cta__next
							h4.cta__title.no-margin Next section:
							h4.cta__title #[a(href="contact.html") Contact Us]
							p Have a question? Feel free to reach us.
							a(href="contact.html").link-arrow.cta__next-link
								| Visit our Contact page
								svg.icon
										use(xlink:href="#icon-chevron-right" xmlns:xlink="http://www.w3.org/1999/xlink")

	// /.cta

block additional-scripts
	//- include partials/path/to/additional/script.js
